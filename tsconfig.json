{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "declaration": true,
      "rootDir": "src",
      "moduleResolution": "Node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "outDir": "./dist/lib/",
    },
    "include": [
      "./src/**/**/**/*"
    ],
    "exclude": ["node_modules", "lib", "**/__tests__/**", "src/fixtures", "playground", "old-stuff", "wip-src" ]
  }